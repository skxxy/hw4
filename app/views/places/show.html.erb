<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/application.css">
<body class="container">
<h1><%= @place["name"] %></h1>
  <div class="row">
    <div class="col">
      <h2>My Posts</h2>
    </div>
  </div>
  <div class="row">
    <div id="details" class="col">
      <% for post in @posts %>
        <h3 class="text-center"><%= post["title"] %></h3>
        <h4 class="text-center"><%= post["posted_on"] %></h4>
        <p class="text-center"><%= post["description"] %></p>
          <% if post.uploaded_image.attached? %>
            <p class="text-center"><img src="<%= url_for(post.uploaded_image) %>" class="img-fluid"></p>
          <% else %>
            <p class="text-center"><img src="<%= post["image"] %>" class="img-fluid"></p>
          <%end%>
    </div>
  </div>

<% end %>


<p> 
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>